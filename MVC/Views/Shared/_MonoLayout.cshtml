<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- theme meta -->
    <meta name="theme-name" content="mono" />

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700|Roboto" rel="stylesheet">
    <link href="~/mono/plugins/material/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/mono/plugins/simplebar/simplebar.css" rel="stylesheet" />

    <!-- PLUGINS CSS STYLE -->
    <link href="~/mono/plugins/nprogress/nprogress.css" rel="stylesheet" />
    <link href="~/mono/plugins/DataTables/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/mono/plugins/jvectormap/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
    <link href="~/mono/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="~/mono/plugins/toaster/toastr.min.css" rel="stylesheet" />

    <!-- MONO CSS -->
    <link id="main-css-href" rel="stylesheet" href="~/mono/css/style.css" />

    <!-- FAVICON -->
    <link href="~/mono/images/favicon.png" rel="shortcut icon" />

    <!--
      HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!--font awesome icons (free version) -->  
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="~/mono/plugins/nprogress/nprogress.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body class="navbar-fixed sidebar-fixed" id="body">
    <script>
        NProgress.configure({ showSpinner: false });
        NProgress.start();
    </script>
    <div id="toaster"></div>

    <!-- ====================================
    ——— WRAPPER
    ===================================== -->
    <div class="wrapper" style="min-height: 90vh;" <i class="mdi mdi-chevron-double-right"</i>>

        <!-- ====================================
        ——— LEFT SIDEBAR WITH OUT FOOTER
        ===================================== -->
        <aside class="left-sidebar sidebar-dark" id="left-sidebar">
            <div id="sidebar" class="sidebar sidebar-with-footer">
                <!-- Aplication Brand -->
                <div class="app-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">                       
                        <img src="~/mono/images/logo.png" alt="Mono" >         
                        <span  class="brand-name" ></span>
                    </a>                  
                </div>
                <!-- begin sidebar scrollbar -->
                <div class="sidebar-left" data-simplebar style="height: 100%;">
                    <i class="mdi mdi-chevron-double-right"></i>
                    <!-- sidebar menu -->
                    <ul class="nav sidebar-inner" id="sidebar-menu"  >

                        <li class="section-title" >                          
                            <span class="nav-text">MENU</span>
                        </li>
                        <li>
                            <a class="sidenav-item-link" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class=""></i>
                                <span class="nav-text">Products</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidenav-item-link" asp-area="" asp-controller="Categories" asp-action="Index">
                                <i class=""></i>
                                <span class="nav-text">Categories</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidenav-item-link" asp-area="" asp-controller="Orders" asp-action="Index">
                                <i class=""></i>
                                <span class="nav-text">Orders</span>
                            </a>
                        </li>
                        <li>
                            <a class="sidenav-item-link" asp-area="" asp-controller="Suppliers" asp-action="Index">
                                <i class=""></i>
                                <span class="nav-text">Suppliers</span>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="sidenav-item-link" asp-area="" asp-controller="Favorites" asp-action="GetFavorites">
                                    <i class=""></i>
                                    <span class="nav-text">Favorites</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a class="sidenav-item-link" asp-area="Report" asp-controller="Home" asp-action="Index">
                                    <i class=""></i>
                                    <span class="nav-text">Report</span>
                                </a>
                            </li>
                        }

                    </ul>
                </div>
                <div class="sidebar-footer">
                    <div class="sidebar-footer-content">
                        <ul class="d-flex">
                            <li class="w-100">
                                <a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="tooltip" title="Home"><i class="mdi mdi-home"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>

        <!-- ====================================
        ——— PAGE WRAPPER
        ===================================== -->
        <div class="page-wrapper">
            <!-- Header -->
            <header class="main-header" id="header">
                <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
                    <!-- Sidebar toggle button -->
                    <button id="sidebar-toggler" class="sidebar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                    </button>
                    <span class="page-title">@ViewData["Title"]</span>
                    <div class="navbar-right">
                        <ul class="nav navbar-nav">
                            <!-- User Account -->

                            <li>
                                <h4><i class="mdi mdi-account"></i></h4>
                            </li>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Account" asp-action="Login" asp-controller="Users">
                                        <span class="nav-text">Logın</span> &nbsp;|&nbsp;
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Account" asp-action="Register" asp-controller="Users">
                                        <span class="nav-text">Register</span>&nbsp;|&nbsp;
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Account" asp-action="Logout" asp-controller="Users">
                                        <span>@User.Identity.Name</span>&nbsp;|&nbsp;<span class="nav-text">Logout</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </header>

            <!-- ====================================
            ——— CONTENT WRAPPER
            ===================================== -->
            <div class="content-wrapper">
                <div class="content">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/mono/plugins/jquery/jquery.min.js"></script>
    <script src="~/mono/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/mono/plugins/simplebar/simplebar.min.js"></script>
    <script src="https://unpkg.com/hotkeys-js/dist/hotkeys.min.js"></script>
    <script src="~/mono/plugins/apexcharts/apexcharts.js"></script>
    <script src="~/mono/plugins/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="~/mono/plugins/jvectormap/jquery-jvectormap-2.0.3.min.js"></script>
    <script src="~/mono/plugins/jvectormap/jquery-jvectormap-world-mill.js"></script>
    <script src="~/mono/plugins/jvectormap/jquery-jvectormap-us-aea.js"></script>
    <script src="~/mono/plugins/daterangepicker/moment.min.js"></script>
    <script src="~/mono/plugins/daterangepicker/daterangepicker.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('input[name="dateRange"]').daterangepicker({
                autoUpdateInput: false,
                singleDatePicker: true,
                locale: {
                    cancelLabel: 'Clear'
                }
            });
            jQuery('input[name="dateRange"]').on('apply.daterangepicker', function (ev, picker) {
                jQuery(this).val(picker.startDate.format('MM/DD/YYYY'));
            });
            jQuery('input[name="dateRange"]').on('cancel.daterangepicker', function (ev, picker) {
                jQuery(this).val('');
            });
            $(".sidenav-item-link").each(function (index, item) {
                if (item.getAttribute("href") == window.location.pathname) {
                    item.parentNode.className = "active";
                } else {
                    item.parentNode.className = "";
                }
            });
        });
    </script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="~/mono/plugins/toaster/toastr.min.js"></script>
    <script src="~/mono/js/mono.js"></script>
    <script src="~/mono/js/chart.js"></script>
    <script src="~/mono/js/map.js"></script>
    <script src="~/mono/js/custom.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>