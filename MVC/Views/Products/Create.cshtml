@model ProductModel

@{
    ViewData["Title"] = "Create New Product";
}

<div class="row">
    <div class="col-12" style="width: 50%;margin: 0 auto;">@* sayfayı ortalaması için *@
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-5">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name.." />
                <input type="file" name="image" accept="@AppSettings.AcceptedImageExtensions" />
            </div>
            <div class="col-5">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description.." /></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="StockAmount" class="control-label"></label>
                <input asp-for="StockAmount" class="form-control" placeholder="Enter stock amount.."/>
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="LotNo" class="control-label"></label>
                <input asp-for="LotNo" class="form-control" placeholder="Enter lot no.." />
                <span asp-validation-for="LotNo" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" placeholder="Enter unit price.." />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="SupplierId" class="control-label"></label>
                <select multiple asp-for="SupplierId" class ="form-control" asp-items="ViewBag.SupplierId">
                    @* <option value="">--Select--</option> *@
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div>
                    <input type="file" name="image" class="form-control" accept=".jpg, .jpeg, .png" />
                </div>
            </div> *@
            <p>
            <div class="col-5">
                <input type="submit" value="Save" class="btn btn-primary" /> 
                &nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button> 
                &nbsp;&nbsp;
                    <p><a asp-action="Index" style="text-decoration: underline;">Back to Product List</a></p>
                </div>
            </p>
        </form>
    </div>
</div>
